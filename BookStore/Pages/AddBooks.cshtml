@page
@model BookStore.Pages.BookPages.AddBooksModel
@{
    ViewData["Title"] = "Add Book";
}

<h1>Add Book</h1>
<form method="post">
    <input type="text" asp-for="AddBook.Id" placeholder="Id" />
    <input type="text" asp-for="AddBook.Title" placeholder="Title" />
    <input type="text" asp-for="AddBook.Author" placeholder="Author" />
    <input type="text" asp-for="AddBook.Description" placeholder="Description" />
    <button type="submit">Submit</button>
</form>